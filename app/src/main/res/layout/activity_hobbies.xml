<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="364dp"
            android:layout_height="58dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="52dp"
            android:fontFamily="@font/cairo"
            android:hint="@string/nick_name_text_des"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/dice_roll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dice_roll"
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:layout_marginBottom="75dp"
            android:hint="@string/dice_roll_no"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/about_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nick_name" />

        <TextView
            android:id="@+id/about_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="49dp"
            android:hint="@string/content_desc_img"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dice_roll" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>